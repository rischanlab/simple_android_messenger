<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    
    	android:background="@drawable/androidback">
    	<ListView 
    		android:layout_width="fill_parent"
    		android:stackFromBottom="true"
        	android:transcriptMode="alwaysScroll"
        	android:layout_weight="1" 
        	android:layout_height="350dip" android:id="@+id/listView_msg">
    		</ListView>
    	<LinearLayout 
		android:orientation = "horizontal"
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    		<EditText 
    			android:text="" 
    			android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="2"
            	android:layout_gravity="bottom" android:id="@+id/editText_sendmsg">
    		</EditText>
    		<Button 
    			android:layout_width="wrap_content" 
    			android:text="Send" 
    			android:layout_height="wrap_content" android:id="@+id/send_button" android:onClick="clickHandler">
    		</Button>
    	
    	
    	</LinearLayout>

    
</LinearLayout>
